# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# App Configuration
APP_NAME=AI Text Summarizer
DEBUG=False

# Database
# Para produção, use PostgreSQL:
DATABASE_URL=postgresql://username:password@host:port/database_name
# Para desenvolvimento local, use SQLite:
# DATABASE_URL=sqlite:///./summarizer.db

# JWT Security (IMPORTANTE: Use uma chave forte e única em produção!)
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=SummarizeAI

# Frontend URL
# Para produção, use a URL do seu frontend deployado:
FRONTEND_URL=https://your-frontend-domain.com
# Para desenvolvimento local:
# FRONTEND_URL=http://localhost:3000

# Frontend Environment Variables
# Para produção, use a URL da sua API deployada:
NEXT_PUBLIC_API_URL=https://your-api-domain.com
# Para desenvolvimento local:
# NEXT_PUBLIC_API_URL=http://localhost:8001