# API Key para o Google Gemini
GEMINI_API_KEY=your-api-key-here

# Configuração do Aplicativo
APP_NAME=SummarizeAI
DEBUG=True

# Banco de Dados
# PostgreSQL (produção)
# DATABASE_URL=postgresql://user:password@localhost/dbname
# SQLite (desenvolvimento)
DATABASE_URL=sqlite:///./summarizer.db

# Segurança JWT
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuração de Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=SummarizeAI

# URL do Frontend
# Produção
# FRONTEND_URL=https://resumidor-texto.vercel.app
# Desenvolvimento local
FRONTEND_URL=http://localhost:3000

# URL da API (Next.js)
# Produção
# NEXT_PUBLIC_API_URL=https://resumidor-texto-api.onrender.com
# Desenvolvimento local
NEXT_PUBLIC_API_URL=http://localhost:8001